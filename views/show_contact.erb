
<div class="box">

  <h1><%= @contact.first_name %> <%= @contact.last_name %></h1>
<p><strong>Email:</strong> <%= @contact.email %></p>
<p><strong>Note:</strong></p>
<p><%= @contact.note %></p>


 
    <form action="/contacts/ <%=@contact.id %>" method="GET">
      <input type="submit" name="Edit Contact" value="EDIT">
    </form>

    <form action="/contacts/ <%=@contact.id %>" method="POST">
      <input type="hidden" name="_method value="put">
      <input type="submit" name="Delete Contact" value="DELETE">
    </form>

  <% end %> 
</div>

<div class="scroll_btn">
  <input type="button" class="show_scroll_btn" name="scroll button" value="scroll down to view more contacts">
</div>